<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernametv"
        android:text="用户名"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordtv"
        android:text="密码"
        android:textSize="30dp"
        app:layout_constraintRight_toRightOf="@id/usernametv"
        app:layout_constraintTop_toBottomOf="@id/usernametv"
        android:layout_marginTop="50dp"
        />
    <EditText
    android:layout_width="210dp"
    android:layout_height="wrap_content"
    android:textSize="30dp"
    android:id="@+id/usernameet"
    app:layout_constraintLeft_toRightOf="@id/usernametv"
    android:layout_marginLeft="20dp"
    app:layout_constraintBottom_toBottomOf="@id/usernametv"
    android:theme="@style/AppTheme"
    />
    <EditText
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/passwordet"
        app:layout_constraintLeft_toLeftOf="@id/usernameet"
        app:layout_constraintBottom_toBottomOf="@id/passwordtv"
        android:theme="@style/AppTheme"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/passwordtv"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:text="注册"
        android:textSize="40dp"
        android:id="@+id/registerbtn"
        android:onClick="register"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/passwordtv"
        android:layout_marginTop="80dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        android:text="登录"
        android:textSize="40dp"
        android:id="@+id/loginbtn"
        android:onClick="login"
        />

</androidx.constraintlayout.widget.ConstraintLayout>